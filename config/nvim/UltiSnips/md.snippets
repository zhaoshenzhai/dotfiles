# Brackets
context "math()"
snippet br "{}" i
\l\\\\{$1\r\\\\}$0
endsnippet

priority 200
context "math()"
snippet dsq "[[]]" i
\l[\\!\l[$1\r]\\!\r]$0
endsnippet

# Typesetting
priority 100
snippet bf "bold" i
**$1**$0
endsnippet

priority 100
snippet it "italics" i
_$1_$0
endsnippet

snippet link "hugo link" i
{{< link file="$1" display="$2"$3 >}}
endsnippet

context "notMath()"
snippet br "space" i
<div class="space"></div>
endsnippet

priority 200
snippet >> "new paragraph" i
<br>

&emsp;&emsp;$0
endsnippet

priority 100
snippet > "indent" i
&emsp;&emsp;$0
endsnippet

snippet color "color" i
<span style="color:${1:red}">$0</span>
endsnippet

snippet qed "qed" i
<span style="float:right;">$\blacksquare$</span>
endsnippet

snippet qedlem "qedlem" i
<span style="float:right;">$\square$</span>
endsnippet
