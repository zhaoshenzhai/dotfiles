# Math
global !p
def math():
	return vim.eval('vimtex#syntax#in_mathzone()') == '1'
def notMath():
	return vim.eval('vimtex#syntax#in_mathzone()') != '1'
endglobal

# Convenience
context "math()"
snippet dequiv "colon<=>" i
\\\\\,\colon\\\\!\Leftrightarrow
endsnippet

snippet SQ "single quotes" it
'$1'$0
endsnippet

snippet DQ "double quotes" it
"$1"$0
endsnippet

