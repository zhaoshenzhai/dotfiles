	$13 & $14 & $15 & $16
\end{bmatrix}
endsnippet

snippet alg "begin algorithm" b
\begin{center}
	\parbox{${1:0.7}\textwidth}{
	\begin{algorithm}[H]
		\caption{$2}
		\SetKwInOut{Input}{input}\SetKwInOut{Output}{output}
		\Input{$3}
		\Output{$4}
		\BlankLine
		$0
	\end{algorithm}}
\end{center}
endsnippet
