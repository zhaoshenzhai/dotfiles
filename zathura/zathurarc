set default-fg              "#A6B5C5"

set statusbar-bg            "#1A2128"
set statusbar-fg            "#13AFAF"

set inputbar-bg             "#141A1F"
set inputbar-fg             "#A6B5C5"

set highlight-active-color "#F8F8FF"
set highlight-color "#A8A8AA"
set highlight-transparency 0.5

set recolor true
set recolor-lightcolor "#1E2127"
set recolor-darkcolor "#F8F8FF"
set highlight-fg "#00FF00"

set page-padding 5
set guioptions none
set window-title-basename true
set adjust-open width

set dbus-service true
set synctex true
set synctex-editor-command "gvim --servername GVIM --remote +%{line} %{input}"

set selection-clipboard clipboard
set sandbox none

map = feedkeys "+"
map x toggle_statusbar
